        {
            "label": "Compile OS3 version locally - Debug",
            "type": "shell",
            "osx": {
                "command": "gmake",
                "options": {
                    "cwd": "${workspaceRoot}",
                    "env": {
                        "DEBUG": "1",
                        "PATH": "/opt/amiga/bin:${env:PATH}"
                    }
                },
            },
            "windows": {
                "command": "gnumake.exe",
                "options": {
                    "cwd": "${workspaceRoot}",
                    "env": {
                        "DEBUG": "1",
                    }
                },
            },
            "command": "make",
            "options": {
                "cwd": "${workspaceRoot}",
                "env": {
                    "DEBUG": "1",
                }
            },
            "args": ["clean", "all"],
            "problemMatcher": [
                {
                    "base": "$gcc",
                    "fileLocation": "absolute"
                }
            ],
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
